{
  "name": "playwright-agents",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "bddgen && playwright test",
    "test:headed": "bddgen && playwright test --headed",
    "test:debug": "bddgen && playwright test --debug",
    "test:report": "npm test && npm run report",
    "test:tag": "bddgen && playwright test --grep",
    "test:smoke": "bddgen && playwright test --grep @smoke",
    "bddgen": "bddgen",
    "diagnose": "python scripts/diagnose-ollama.py",
    "report": "playwright show-report",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "clean": "rimraf dist test-results playwright-report .features-gen",
    "clean:logs": "rimraf logs/*.log",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@actions/core": "^3.0.0",
    "@cucumber/cucumber": "^12.6.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.0",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.16.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
